<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Type in your comment, this is a sample comment -->
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<GridPane  alignment="CENTER" hgap="10"
           vgap="50"
           xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.AddProductController">



    <Text text="Add Product" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" >

        <font>
            <Font name="Times New Roman bold" size="30" />
        </font>

    </Text>

    <Label text="Product Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="productName"/>

    <Label text="Quantity" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="quantity"/>

    <Label text="Unit Price" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="price"/>

    <Label text="Product Number" GridPane.rowIndex="4" GridPane.columnIndex="0"/>

    <TextField GridPane.rowIndex="4" GridPane.columnIndex="1" fx:id="number"/>

    <Button text="Add" GridPane.rowIndex="5" GridPane.columnIndex="2" fx:id="add"/>

    <Button text="Back to Home Screen" GridPane.rowIndex="6" GridPane.columnIndex="2" fx:id="home" onAction="#homeButton"/>









</GridPane>
